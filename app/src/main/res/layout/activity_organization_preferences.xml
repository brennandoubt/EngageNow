<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventPreferences"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:textSize="17dp"
                android:layout_height="wrap_content"
                android:layout_margin ="20dp"
                android:text="Fill in the following fields to update your account"
                />

            <EditText
                android:id="@+id/org_update_name_et"
                android:layout_width="match_parent"
                android:layout_margin ="20dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:inputType="text"
                android:hint="Organization Name"
                android:maxLength="30"
                />

            <EditText
                android:id="@+id/org_update_descr_et"
                android:layout_width="match_parent"
                android:layout_margin ="15dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Organization Description"
                android:maxLength="200"
                />

            <EditText
                android:id="@+id/org_update_website_link_et"
                android:layout_width="match_parent"
                android:layout_margin ="15dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Link must begin with 'https://'"
                android:maxLength="200"
                />

            <ImageView
                android:id="@+id/org_update_selected_image"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_add_24"
                android:background="@drawable/custom_imageview_border"

                />

            <Button
                android:id="@+id/org_update_upload_image_button"
                android:layout_width="match_parent"
                android:layout_margin ="20dp"
                android:layout_height="wrap_content"
                android:text="Select Image"
                />

            <Button
                android:id="@+id/submit_change_button"
                android:layout_width="match_parent"
                android:layout_margin ="20dp"
                android:layout_height="wrap_content"
                android:text="Update Account"
                />
        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>