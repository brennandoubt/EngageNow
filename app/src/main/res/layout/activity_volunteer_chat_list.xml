<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolunteerChatList">

    <TextView
        android:id="@+id/your_matches_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Matched Organizations"
        android:textSize="25dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/matches_lv"
        android:layout_margin="40dp"/>

    <ListView
        android:id="@+id/matches_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@id/your_matches_tv"
        app:layout_constraintBottom_toTopOf="@id/pot_match_button"/>

    <Button
        android:id="@+id/pot_match_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Potential Matches"
        android:layout_margin="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/matches_lv"/>

</androidx.constraintlayout.widget.ConstraintLayout>